{
  "manifest_version": 3,
  "name": "LLM Memory Bridge",
  "version": "1.0",
  "description": "Syncs local memory context into Gemini web chats.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*",
    "https://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/Readability.js", "gatekeeper_core.js", "content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-gray.png",
      "32": "icons/icon-gray.png",
      "48": "icons/icon-gray.png",
      "128": "icons/icon-gray.png"
    }
  },
  "icons": {
    "16": "icons/icon-gray.png",
    "32": "icons/icon-gray.png",
    "48": "icons/icon-gray.png",
    "128": "icons/icon-gray.png"
  }
}